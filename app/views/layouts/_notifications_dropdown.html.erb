<!-- notifications -->
<div class="app-header-notifications">
  <div class="dropdown">
    <a class="dropdown-toggle notification-bell-icon" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"></a>
    <div class="dropdown-menu dropdown-menu-notifications dropdown-menu-right">
      <!-- notification -->
      <% if @notifications.present? %>
        <% @notifications&.each do |notification| %>
          <%= link_to notification.notification_url, class: 'dropdown-item' do %>
            <div class="dropdown-item-img">
              <img class="award" src="assets/img/award-gold.svg">
            </div>
            <div>
              <span><strong><%= notification.notifiable_type %></strong> <%= notification.message %></span><br>
              <span class="text-muted"><%= notification_time(notification.created_at) %></span>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <a href="#" class='dropdown-item'>
          <div class="dropdown-item-img">
            <img class="award" src="assets/img/icon-refresh.svg">
          </div>
          <div>
            <span><strong>No Record found</strong></span>
          </div>
        </a>
      <% end %>
      <!-- /notification -->
    </div>
  </div>
</div>
<!-- /notifications -->
